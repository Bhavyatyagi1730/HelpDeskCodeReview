@model Model.HelpDesk


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*<a href="~/Views/Shared/_AdminLayout.cshtml">~/Views/Shared/_AdminLayout.cshtml</a>*@
@*<h2>Edit</h2>*@

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />



@using (Html.BeginForm(new { @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()

<div class="container">
    <h4>HelpDesk</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.User_Id)

    <div class="form-group p-3">
        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group p-3">
        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group p-3">
        @Html.LabelFor(model => model.Roletype, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select class="form-control" name="RoleTypeID">
   
                @foreach (var item in ViewBag.roledata)
                {
                    <option value="@item.RoleTypeID">@item.RoleType_Disc</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group p-3">
        @Html.LabelFor(model => model.Dep_ID, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <select class="form-control" name="Dep_ID">
      
                @foreach (var item in ViewBag.departmentdata)
                {
                    <option value="@item.Dep_ID">@item.Dept_Desc</option>
                }
            </select>
        </div>
    </div>


    <div class="form-group p-3">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group p-5 text-center">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
}





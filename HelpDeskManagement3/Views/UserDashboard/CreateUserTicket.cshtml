@model Model.TicketTable

@{
    ViewBag.Title = "CreateUserTicket";
    Layout = "~/Views/Shared/_NavbarFooter.cshtml";
}


<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/UserDashboard/CreateTicket.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
    a {
        text-decoration: none;
        color: black;
    }
</style>
@if (TempData["Message"] != null)
{
    <div>@Html.Raw(TempData["Message"])</div>
}


<div class="two alt-two text-center mt-5">
    <h1>
        Create Ticket
        <span>How Can I Help You Today ?</span>
    </h1>
</div>
<hr />

@using (Html.BeginForm("CreateUserTicket", "UserDashboard", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container contact-form">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group p-3 ">
            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-44" })
            <div class="col-md-10 w-50">
                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group p-3">
            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label col-lg-16" })
            <div class="col-mt-10 w-50">
                @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", cols = "70", rows = "50" } })
                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
            </div>
        </div>




        <div class="form-group container">
            @Html.LabelFor(model => model.Image_path, htmlAttributes: new { @class = "control-label col-lg-16 mt-2" })
            <div class="col-md-10">
                <input type="file" name="ImageFile" readonly />
            </div>
        </div>




        <div class="form-group">
            <div class="text-center col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="text-center mt-4 btn btn-success m-3" />
                <a class="text-center mt-4 btn btn-danger px-3 m-3" href="@Url.Action("ShowUserDashboard","UserDashboard")">Back</a>
            </div>
        </div>
    </div>
}
